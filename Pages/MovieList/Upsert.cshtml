@page
@model MovieApp.Pages.MovieList.UpsertModel
@{
    ViewData["Title"] = "Upsert";
}


<br />
<h2 class="text-info">@(Model.Movie.Id!=0?"Edit":"Create") Movie</h2>
<br />

<div class="border container" style="padding:30px">
    <form method="post">
        @if (Model.Movie.Id != 0)
        {
            <input type="hidden" asp-for="Movie.Id" />

        }
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Movie.Name"></label>
            </div>
            <div class="col-6">
                <input asp-for="Movie.Name" class="form-control" />
            </div>
            <span asp-validation-for="Movie.Name" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Movie.Writer"></label>
            </div>
            <div class="col-6">
                <input asp-for="Movie.Writer" class="form-control" />
            </div>
            <span asp-validation-for="Movie.Writer" class="text-danger"></span>

        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Movie.IMDB"></label>
            </div>
            <div class="col-6">
                <input asp-for="Movie.IMDB" class="form-control" />
            </div>
            <span asp-validation-for="Movie.IMDB" class="text-danger"></span>

        </div>
        <div class="form-group row">
            <div class="col-3 offset-3">
                <button type="submit" class="btn btn-primary form-control">@(Model.Movie.Id !=0?"Update":"Create")</button>
            </div>
            <div class="col-3">
                <a asp-page="Index" class="btn btn-success form-control">Back to List</a>
            </div>
        </div>
    </form>
</div>

@*this is client side validation*@
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}